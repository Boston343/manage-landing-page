---
import NavLink from "./NavLink.astro";
import ButtonPrimary from "../ButtonPrimary/ButtonPrimary.astro";
---

<nav class="relative container mx-auto p-6">
  <!-- flex container -->
  <div class="flex items-center justify-between">
    <!-- logo -->
    <div class="pt-2">
      <img src="images/logo.svg" alt="logo" />
    </div>
    <!-- menu items -->
    <div class="hidden md:flex space-x-7">
      <NavLink link="Pricing" />
      <NavLink link="Product" />
      <NavLink link="About Us" />
      <NavLink link="Careers" />
      <NavLink link="Community" />
    </div>
    <!-- button -->
    <ButtonPrimary text="Get Started" href="" hidey={true} />
  </div>
</nav>
